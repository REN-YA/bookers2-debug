<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info',user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book%>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@books.user) do %>
            <%= attachment_image_tag(@books.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, book_path(@books) %></td>
          <td><%= @books.body %></td>
          <% if @books.user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success edit_book_#{@books.id}" %></td>
          <td><%= link_to 'Destroy', book_path(@books), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@books.id}"%></td>
           <% end %>
          <td>
          <% if @books.favorited_by?(current_user) %>
           <p>
            <%= link_to book_favorites_path(@books),method: :delete do %>
            ♥<%= @books .favorites.count %>
            <% end %>
           </p>
          <% else %>
           <p>
            <%= link_to book_favorites_path(@books),method: :post do %>
            ♡<%= @books.favorites.count %>
            <% end %>
           </p>
          <% end %>
          </td>
          <td><p> コメント数:<%= @books.book_comments.count %></p></td>
          </tr>
          <% @books.book_comments.each do |book_comment| %>
          <tr>
          <div>
          <td>
           <p><%= image_tag('no_image.jpg') %></p>
           <%= link_to book_comment.user.name, user_path(@books.user) %>
          </td>
          <td>
           <%= book_comment.comment %>
          </td>
          <td>
           <% if book_comment.user == current_user %>
            <div>
             <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger"  %>
            </div>
           <% end %>
          </td>
          <% end %>
          </div>
          </td>
        </tr>
      </table>
      <div>
          <%= form_with(model:[@books, @book_comment], local: true) do |f| %>
          <% if @book_comment.errors.any? %>
           <h3><%= @book_comment.errors.count %>error prohibited this obj from being saved</h3>
           <br>
           <% @book_comment.errors.full_messages.each do |message| %>
           <li><%= message %></li>
           <% end %>
           <% end %>
           <%= f.text_area :comment,cols:'85',rows:'5' ,placeholder: "コメントをここに" %>
           <br>
           <%= f.submit "送信" %>
          <% end %>
          </div>
    </div>
  </div>
</div>